<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rasmus.p2app">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".frontend.ui.activities.LoadingScreenActivity"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".frontend.ui.activities.MainActivity">
        </activity>

        <activity
            android:name=".frontend.ui.activities.PickRecipeActivity">
        </activity>

        <activity
            android:name=".frontend.ui.activities.DescriptionRecipeClickedActivity">
        </activity>

        <activity
            android:name=".frontend.ui.activities.RecipeClickedActivity">
        </activity>

        <activity
            android:name=".frontend.ui.activities.GoalActivity">
        </activity>

        <activity
            android:name=".frontend.ui.activities.SettingsActivity">
        </activity>

    </application>

</manifest>